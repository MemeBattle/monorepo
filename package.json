{
  "name": "@memebattle/memebattle",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint:js": "eslint --ext .js,.vue,.jsx,.ts,.tsx .",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:styles": "stylelint {apps,packages}/**/*.scss",
    "test": "lerna run --no-bail test --ignore-path .gitignore",
    "lerna-publish": "lerna publish from-package",
    "lerna-ci-publish": "yarn lerna publish --yes --no-git-reset from-package",
    "ligretto:start": "yarn lerna run --parallel --scope @memebattle/ligretto-shared --scope @memebattle/redux-utils --scope @memebattle/ligretto-backend --scope @memebattle/ligretto-recovery --scope @memebattle/ligretto-ui --scope @memebattle/auth-front start:dev",
    "common-packages:build": "yarn lerna run --scope @memebattle/ligretto-shared build && yarn lerna run --parallel --scope @memebattle/redux-utils --scope @memebattle/ligretto-ui build && yarn lerna run --scope @memebattle/auth-front build:module",
    "ligretto:front:build": "yarn lerna run --stream --scope @memebattle/ligretto-recovery build",
    "ligretto:back:build": "yarn lerna run --stream --scope @memebattle/ligretto-backend build",
    "ligretto:ui:build-storybook": "yarn lerna run --stream --scope @memebattle/ligretto-ui build-storybook"
  },
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "packages/**",
    "apps/*"
  ],
  "command": {
    "publish": {
      "npmClient": "npm"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-app": "^6.2.2",
    "hygen": "^5.0.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2",
    "typescript": "4.1.3"
  }
}
